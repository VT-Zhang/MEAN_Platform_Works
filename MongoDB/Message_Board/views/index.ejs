<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Board</title>
        <style>
            h4{
                margin-left: 20px;
                color: blue;
            }
            #comment{
                margin-left: 20px;
            }
        </style>
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <hr />
        <form action="/message" method="post">
            <p>Name: <input type="text" name="name" /></p>
            <p>Message: <textarea rows="3" cols="70" name="message" placeholder="Enter your message here"></textarea></p>
            <p><input type="submit" value="Post Message" /></p>
        </form>
        <hr />
            <% for (var i = 0; i < messages.length; i++){ %>
                <h3>Name: <%= messages[i].poster %></h3>
                <h3>Message: <%= messages[i].message %></h3>
                    <% for (var j = 0; j < messages[i].comments.length; j++) {%>
                        <h4>Name: <%= messages[i].comments[j].commenter %></h4>
                        <h4>Comment: <%= messages[i].comments[j].comment %></h4>
                    <% } %>
                <form id="comment" action="/message/<%=messages[i]._id%>/comment" method="post">
                    <p>Name: <input type="text" name="name" /></p>
                    <p>Comment: <textarea rows="3" cols="70" name="comment" placeholder="Enter your message here"></textarea></p>
                    <p><input type="submit" value="Post Comment" /></p>
                </form>
                <hr />
            <% } %>
    </body>
</html>
